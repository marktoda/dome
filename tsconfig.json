{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "composite": true,
    "declarationMap": true,
    "paths": {
      "@dome/common": ["packages/common/src"],
      "@dome/common/*": ["packages/common/src/*"],
      "@dome/logging": ["packages/logging/dist"],
      "@dome/logging/*": ["packages/logging/dist/*"],
      "@dome/cli": ["packages/cli/src"],
      "@dome/cli/*": ["packages/cli/src/*"],
      "@dome/metrics": ["packages/metrics/dist"],
      "@dome/metrics/*": ["packages/metrics/dist/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
