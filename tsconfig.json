{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@dome/common": ["packages/common/src"],
      "@dome/common/*": ["packages/common/src/*"],
      "@dome/dome-sdk": ["packages/dome-sdk/src"],
      "@dome/dome-sdk/*": ["packages/dome-sdk/src/*"],
      "@dome/auth": ["services/auth/src"],
      "@dome/auth/*": ["services/auth/src/*"],
      "@dome/silo": ["services/silo/src"],
      "@dome/silo/*": ["services/silo/src/*"],
      "@dome/todos": ["services/todos/src"],
      "@dome/todos/*": ["services/todos/src/*"],
      "@dome/constellation": ["services/constellation/src"],
      "@dome/constellation/*": ["services/constellation/src/*"],
      "@dome/errors": ["packages/errors/src"],
      "@dome/errors/*": ["packages/errors/src/*"],
      "@dome/tsunami": ["services/tsunami/src"],
      "@dome/tsunami/*": ["services/tsunami/src/*"],
      "@dome/chat": ["services/chat/src"],
      "@dome/chat/*": ["services/chat/src/*"],
      "@dome/ai-processor": ["services/ai-processor/src"],
      "@dome/ai-processor/*": ["services/ai-processor/src/*"],
      "@dome/cli": ["packages/cli/src"],
      "@dome/cli/*": ["packages/cli/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
