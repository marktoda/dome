{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@dome/common": ["packages/common/src"],
      "@dome/common/*": ["packages/common/src/*"],
      "@dome/silo": ["services/silo/src"],
      "@dome/silo/*": ["services/silo/src/*"],
      "@dome/constellation": ["services/constellation/src"],
      "@dome/constellation/*": ["services/constellation/src/*"],
      "@dome/ai-processor": ["services/ai-processor/src"],
      "@dome/ai-processor/*": ["services/ai-processor/src/*"],
      "@dome/logging": ["packages/logging/src"],
      "@dome/logging/*": ["packages/logging/src/*"],
      "@dome/cli": ["packages/cli/src"],
      "@dome/cli/*": ["packages/cli/src/*"],
      "@dome/metrics": ["packages/metrics/src"],
      "@dome/metrics/*": ["packages/metrics/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
