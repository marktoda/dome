{
  "name": "dome",
  "version": "0.1.0",
  "private": true,
  "description": "Cloudflare Workers microservices monorepo",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter ingestor dev",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r exec -- eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint .",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "gen:sdk": "fern generate --local --log-level info --force && cp templates/sdk-package/template.package.json packages/dome-sdk/package.json && cp templates/sdk-package/template.tsconfig.json packages/dome-sdk/tsconfig.json",
    "gen:docs": "fern generate --docs --local",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.38.0",
    "fern-api": "^0.60.29",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^2.8.7",
    "tsx": "^4.19.4",
    "typescript": "^5.0.4",
    "yargs": "^17.7.2",
    "zod": "^3.21.4"
  },
  "lint-staged": {
    "services/dome-api/src/**/*.{ts,tsx}": [
      "pnpm --filter dome-api gen:openapi",
      "git add openapi.json",
      "node ./scripts/copy-openapi-spec.js",
      "sh -c 'pnpm run gen:sdk'",
      "git add packages/dome-sdk/ fern/openapi/openapi.json"
    ],
    "openapi.json": [
      "echo 'openapi.json changed, SDK generation should have been triggered by dome-api source change if applicable.'",
      "node ./scripts/copy-openapi-spec.js",
      "sh -c 'pnpm run gen:sdk'",
      "git add packages/dome-sdk/ fern/openapi/openapi.json"
    ],
    "fern/**/*.{json,yml,yaml}": [
      "sh -c 'pnpm run gen:sdk'",
      "git add packages/dome-sdk/"
    ]
  }
}
