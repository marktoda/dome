# Base URL - The base URL of your application
# Development: http://localhost:3000
# Production: https://67143919.dome-8dm.pages.dev
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# API Backend URL - Used for communicating with the auth service
# Development: Local API or mock
# Production: https://dome-api.chatter-9999.workers.dev
NEXT_PUBLIC_API_URL=https://dome-api.chatter-9999.workers.dev

# NextAuth.js Configuration
# The URL where your application is running - must match NEXT_PUBLIC_BASE_URL
NEXTAUTH_URL=http://localhost:3000
# A random secret used to encrypt cookies and tokens - generate a secure random string
# You can generate one using: `openssl rand -base64 32`
NEXTAUTH_SECRET=replace_with_a_secure_random_string_at_least_32_characters
# Token lifetime in seconds (default: 30 days)
NEXTAUTH_JWT_MAX_AGE=2592000

# GitHub OAuth credentials
# Create these at https://github.com/settings/developers
# Development callback URL: http://localhost:3000/api/auth/callback/github
# Production callback URL: https://67143919.dome-8dm.pages.dev/api/auth/callback/github
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Notion OAuth credentials
# Create these at https://www.notion.so/my-integrations
# Development callback URL: http://localhost:3000/api/auth/callback/notion
# Production callback URL: https://67143919.dome-8dm.pages.dev/api/auth/callback/notion
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret

# Optional - debug mode for NextAuth.js
# Uncomment this line to enable debug logs
# DEBUG=next-auth

# Cookie configuration (optional)
# NEXTAUTH_COOKIE_DOMAIN=.your-domain.com
# NEXTAUTH_COOKIE_SECURE=true