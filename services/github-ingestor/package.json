{
  "name": "github-ingestor",
  "version": "1.0.0",
  "description": "GitHub repository ingestion worker for Dome",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'",
    "generate-migrations": "drizzle-kit generate",
    "apply-migration": "wrangler d1 migrations apply github-ingestor"
  },
  "dependencies": {
    "@dome/common": "workspace:*",
    "@dome/logging": "workspace:*",
    "@hono/zod-validator": "^0.1.8",
    "@octokit/app": "^14.0.0",
    "@octokit/rest": "^20.0.0",
    "drizzle-orm": "^0.29.0",
    "hono": "^3.10.0",
    "minimatch": "^9.0.0",
    "ulid": "^2.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20230914.0",
    "@types/node": "^20.8.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^8.50.0",
    "miniflare": "^3.20231030.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vitest": "^0.34.0",
    "wrangler": "^3.14.0"
  }
}
