{
  "name": "@dome/todos",
  "version": "1.0.2",
  "description": "Todos service for the Dome platform",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./client": {
      "import": "./dist/client/index.js",
      "types": "./dist/client/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "lint": "eslint --ext .ts,.js .",
    "generate-migrations": "drizzle-kit generate",
    "migrate": "wrangler d1 migrations apply todos_db --local",
    "migrate:prod": "wrangler d1 migrations apply todos_db",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "drizzle-orm": "^0.42.0",
    "hono": "^3.9.2",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "@dome/common": "workspace:*",
    "@dome/silo": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "@types/node": "^20.8.10",
    "drizzle-kit": "^0.31.0",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "vitest": "^3.1.3",
    "wrangler": "^3.15.0"
  }
}
